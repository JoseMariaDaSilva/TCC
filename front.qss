QPushButton{
    width:100px;
    background-color:#524e4e;
    color:#e4ede4;
    padding: 1px;
    border-style: solid;
    border: 1px solid #524e4e;
    border-radius: 7px;
}

QPushButton:hover:pressed {
  background-color:#7f8a7f;
}

QPushButton#bt1:hover:pressed {
