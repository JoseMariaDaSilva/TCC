


QMainWindow { 
    background-color: qlineargradient(x1:1 y1:0, x2:0 y2:1, stop:0 #e2f2e1, stop:1 #d2f2d0);
    border: 1px solid black;
}

QMenuBar {
    
    background-color: #d2f2d0;
}

QGroupBox {
    border-radius: 10px;
    background-color:qlineargradient(x1:0 y1:0, x2:1 y2:1, stop:0 #e4ede4, stop:1 #d1e3d1);

}
/*=====================================Tab=====================================*/

QWidget#tab1::pane {
    border: 0px;
}


QTabBar::tab:!selected{
    background: #e4ede4;
}
QTabBar::tab:selected{
    background: #d1e3d1;
}

QTabWidget::pane { 
    background-color: #d1e3d1;
}
